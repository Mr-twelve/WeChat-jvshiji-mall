.cu-avatar.lg {
  width: 175rpx;
  height: 175rpx;
  font-size: 2em;
}

.solids-bottommy {
  border-bottom: 1rpx solid #eee;
}
.solids-topmy{
  border-bottom: 1rpx solid #eee;
}

.btn-confirm {
  color: #008DF8;
  text-align: center;
  font-size: 34rpx;
}

.btn-confirm::after {
  border: none;
}

.dingdanimg {
  height: 90rpx;
  display: inline-block;
  margin: 0 10rpx;
}

.cu-list.menu-avatar>.cu-item>.cu-avatar {
  position: absolute;
  left: 10rpx;
}

.VerticalNav.nav .cu-item.cur {
  background-color: white;
}

.cu-btn.icon {
  width: 33%;
  height: 33%;
  border-radius: 500rpx;
  padding: 0;

}




.VerticalNav.nav {
  width: 250rpx;
  white-space: initial;
}

.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;
}


.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #f1f1f1;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;

}

.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}

.VerticalBox {
  display: flex;
}

.VerticalMain {
  background-color: #f1f1f1;
}

.VerticalNav.nav .cu-item {
  background-color: #f1f1f1;
  height: 50px;
}